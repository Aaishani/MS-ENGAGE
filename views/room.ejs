     <title>Microsoft Clone </title>
     <link rel="stylesheet" href="style.css">                                   <!-- import style.css-->                   
    
     <!-- import socket io here-->
     <script src="/socket.io/socket.io.js"></script>
 
     <!-- import peerjs here-->
     <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>        <!-- to import mic icon-->  
